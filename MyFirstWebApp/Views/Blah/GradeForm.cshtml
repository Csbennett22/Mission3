@{
    ViewData["Title"] = "Grade Form Page";
    ViewData["Header"] = "Grade Calculator";
}

@model GradeFormModel;

<!--grade calculator form-->

<form method="post">
    <label>Assignments:</label>
    <input id="assignments" asp-for="Assignments" /><br />
    <label>Group Projects:</label>
    <input id="gproject" asp-for="Gproject" /><br />
    <label>Quizzes:</label>
    <input id="quiz" asp-for="Quiz" /><br />
    <label>Exams:</label>
    <input id="exam" asp-for="Exam" /><br />
    <label>INTEX:</label>
    <input id="intex" asp-for="Intex"/><br />

    <input id="buttoncalc" type="submit" value="Calculate Grade" />
    <div asp-validation-summary="All"></div>
</form>

<!--bring in the different packages and javascript I've written'-->
<script src="js/gradecalc.js"></script>